{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

<div class="container">
        <!------Début Aside------>
        <aside>
            <div class="top">
                <div class="logo">
                    <h2>SEN-VOITURE</h2>
                </div>
                <div class="close" id="close-btn">
                    <i class="uil uil-times"></i>
                </div>
            </div>

            <div class="sidebar" id="mySide">
                <a href="./"  class="alink">
                    <i class="uil uil-apps"></i>
                    <h3>Dashbord</h3>
                </a>
                <a  href="{{ path('app_user_index')}}" class="alink">
                    <i class="uil uil-users-alt"></i>
                    <h3>Utilisateurs</h3>
                </a>
                <a  href="{{ path('app_client')}}" class="alink">
                    <i class="uil uil-users-alt"></i>
                    <h3>Clients</h3>
                </a>
                <a  href="{{ path('app_voiture_index')}}" id="evnt"  class="alink ">
                    <i class="uil uil-car-sideview"></i>
                    <h3>Voitures</h3>
                </a>
                <a href="{{ path('app_demandes') }}"  class="alink active">
                    <i class="uil uil-postcard"></i>
                    <h3>Demandes</h3>
                </a>
                <a href="#" class="alink">
                    <i class="uil uil-car-wash"></i>
                    <h3>Locations</h3>
                </a>
                <a href="{{ path('app_logout') }}">
                    <i class="uil uil-signout"></i>
                    <h3>Déconnexion</h3>
                </a>
            </div>
        </aside>
        <!------Fin Aside------>

        <main>
            <section class="sect" id="event">
<h1>Back office</h1>




<div class="recent-orders" id="corp">

    <div class="myHeads">
        <h2>Liste des demandes de location</h2>
    </div>
    <div class="item add-user" id="addEv" >
        <div>
            
             
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Photo</th>
                <th>Client</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Prix</th>
                <th>Satut</th>
                
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demande in demandes %}
            <tr>
                <td>
                    <img class="photo-profil" src="{{ demande.voiture.photo }}" width="20px" height="80px">
                </td>
                <td>{{ demande.client.prenom}} {{ demande.client.nom}}</td>
                <td>{{ demande.dateDebut | date("d/m/Y") }}</td>
                <td>{{ demande.dateFin | date("d/m/Y") }}</td>
                <td>{{ demande.prixTotal }}</td>
                <td>{{ demande.statut }}</td>
                <td>
                    {% if demande.statut == 'VALIDER' %}
                    <a href="{{ path('app_demande_end', {'id': demande.id}) }}"><button class="btnss">Terminer</button></a>
                    {% elseif demande.statut == 'EN COURS' %}
                    <a href="{{ path('app_demande_valide', {'id': demande.id}) }}"><button class="btns">Valider</button></a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucune demande</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>


</section>
        </main>

        <!------Fin MAIN------>

        <div class="right">
            <div class="top">
                <button id="menu-btn">
                    <i class="uil uil-bars"></i>
                </button>
                <div class="theme-toggler">
                    <i class="uil uil-sun active"></i>
                    <i class="uil uil-moon"></i>
                </div>
                <div class="profile">
                    <div class="info">
                        <p>Bonjour, <b>{{app.user.prenom}}</b></p>
                    </div>
                    <div class="profil-photo">
                        <img src="{{ app.user.photo }}" alt="" srcset="">
                    </div>
                </div>
            </div>
            <!------Fin TOP------>

            
    </div>

    

   
{% endblock %}
